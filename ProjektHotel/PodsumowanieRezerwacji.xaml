        <TextBlock x:Name="Ulica" HorizontalAlignment="Left" Height="23" Margin="174,233,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock x:Name="Miasto" HorizontalAlignment="Left" Height="23" Margin="174,268,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock x:Name="Telefon" HorizontalAlignment="Left" Height="23" Margin="174,299,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock x:Name="Email" HorizontalAlignment="Left" Height="23" Margin="174,326,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Zarezerwowane pokoje:" HorizontalAlignment="Left" Margin="442,219,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="DataOd" HorizontalAlignment="Left" Height="23" Margin="550,140,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock x:Name="DataDo" HorizontalAlignment="Left" Height="23" Margin="550,179,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock x:Name="Imie_Copy" HorizontalAlignment="Left" Height="23" Margin="174,140,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock x:Name="ZarPokoje" HorizontalAlignment="Left" Margin="602,224,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Label Content="Kwota do zapłaty: " HorizontalAlignment="Left" Margin="495,308,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="Kwota" HorizontalAlignment="Left" Margin="621,313,0,0" TextWrapping="Wrap"  VerticalAlignment="Top"/>
        <Button x:Name="Wroc" Content="Wróć" HorizontalAlignment="Left" Margin="644,351,0,0" VerticalAlignment="Top" Width="75" Click="Wroc_Click"/>
