        <Label Content="Ulica" HorizontalAlignment="Left" Margin="57,233,0,0" VerticalAlignment="Top"/>
        <Label Content="Miasto" HorizontalAlignment="Left" Margin="57,264,0,0" VerticalAlignment="Top"/>
        <Label Content="Telefon" HorizontalAlignment="Left" Margin="57,295,0,0" VerticalAlignment="Top"/>
        <Label Content="Email" HorizontalAlignment="Left" Margin="57,326,0,0" VerticalAlignment="Top"/>
        <GridSplitter HorizontalAlignment="Left" Height="241" Margin="380,128,0,0" VerticalAlignment="Top" Width="5"/>
        <Label Content="Data od" HorizontalAlignment="Left" Margin="445,140,0,0" VerticalAlignment="Top"/>
        <Label Content="Data do" HorizontalAlignment="Left" Margin="445,179,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="Imie" HorizontalAlignment="Left" Height="23" Margin="174,140,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
